#include <stdio.h> 
int main() {

    printf("--- Movimento da Torre ---\n");
    int casasTorre = 5;
    for (int i = 0; i < casasTorre; i++) {
        printf("Direita\n"); 
    }
    printf("\n");
    printf("--- Movimento do Bispo ---\n");
    int casasBispo = 5; 
    int contadorBispo = 0; 
    while (contadorBispo < casasBispo) {
        printf("Cima, Direita\n");
        contadorBispo++; 
    }
    printf("\n"); 
    printf("--- Movimento da Rainha ---\n");
    int casasRainha = 8; 
    int contadorRainha = 0; 
    do {
        printf("Esquerda\n"); 
        contadorRainha++; 
    } while (contadorRainha < casasRainha);
    printf("\n"); 

    printf("--- Movimento do Cavalo ---\n");

    int casasBaixo = 2; 
    int casasEsquerda = 1; 

    // Primeiro loop (for): simula o movimento para baixo (duas casas)
    for (int i = 0; i < casasBaixo; i++) {
        printf("Baixo\n"); 
    }

    // Segundo loop (while): simula o movimento perpendicular (uma casa para a esquerda)
    int j = 0;
    while (j < casasEsquerda) {
        printf("Esquerda\n"); 
        j++;
    }
    printf("\n"); 

    return 0; 
}
